<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_copy_text"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <TextView
                android:text="@string/copy_to_this"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:textSize="35dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/trigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_trigger_msg_copy_text"
                    android:textSize="30dp"
                    android:text="@string/text_null"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_send_clipboard"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <TextView
                android:text="@string/send_clipboard"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:textSize="35dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/trigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_trigger_msg_send_clipboard"
                    android:textSize="30dp"
                    android:text="@string/text_null"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_find_phone"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <TextView
                android:text="@string/find_phone"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:textSize="35dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/trigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_trigger_msg_find_phone"
                    android:textSize="30dp"
                    android:text="@string/text_null"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>