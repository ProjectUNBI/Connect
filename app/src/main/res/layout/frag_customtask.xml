<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/smalest_margin_from_wall">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_copy_text"
            android:layout_margin="@dimen/smalest_margin_from_wall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/plugin_group_height">
            <TextView
                android:text="@string/copy_to_this"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_margin="@dimen/smalest_margin_from_wall"
                android:textSize="@dimen/medium_bold"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/smalest_margin_from_wall"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/big_norbig_normal"
                    android:layout_marginRight="@dimen/margin_end"
                    android:text="@string/trigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_trigger_msg_copy_text"
                    android:textSize="@dimen/big_norbig_normal"
                    android:text="@string/text_null"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_send_clipboard"
            android:layout_margin="@dimen/smalest_margin_from_wall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/plugin_group_height">
            <TextView
                android:text="@string/send_clipboard"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:textSize="@dimen/medium_bold"
                android:layout_margin="@dimen/smalest_margin_from_wall"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/smalest_margin_from_wall"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/big_norbig_normal"
                    android:layout_marginRight="@dimen/margin_end"
                    android:text="@string/trigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_trigger_msg_send_clipboard"
                    android:textSize="@dimen/big_norbig_normal"
                    android:text="@string/text_null"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_find_phone"
            android:layout_margin="@dimen/smalest_margin_from_wall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/plugin_group_height">
            <TextView
                android:text="@string/find_phone"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:textSize="@dimen/medium_bold"
                android:layout_margin="@dimen/smalest_margin_from_wall"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/smalest_margin_from_wall"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/big_norbig_normal"
                    android:layout_marginRight="@dimen/margin_end"
                    android:text="@string/trigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_trigger_msg_find_phone"
                    android:textSize="@dimen/big_norbig_normal"
                    android:text="@string/text_null"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>